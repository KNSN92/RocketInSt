{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "files.associations": {
    ".env*": "dotenv"
  },
  // dotenv とかをcopilotが読めないように除外
  "github.copilot.enable": {
    "*": true,
    "dotenv": false
  }
}
